rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les photos de menus
    match /menus/{etablissementId}/{filename} {
      // Lecture publique pour tous
      allow read: if true;
 
      // Upload uniquement pour les utilisateurs authentifiés
      // Limite de taille : 5 MB
      // Types autorisés : images uniquement
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
 
      // Suppression uniquement par les utilisateurs authentifiés
      allow delete: if request.auth != null;
    }
  }
}